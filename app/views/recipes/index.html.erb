<h1>Searching recipes for <%= @search_term %>
<table border="1">
	<tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to image_tag(recipe["image_url"], :size => "100x100", :crop => :fill), recipe["f2f_url"] %></td>
			<td><%= link_to (sanitize recipe["title"]), recipe["f2f_url"] %></td>
			<td><%= recipe["social_rank"]%></td>
		</tr>
	<% end %>
</table>



<p>Powered By Food2Fork.com</p>
